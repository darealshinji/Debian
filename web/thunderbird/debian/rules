#!/usr/bin/make -f


%:
	dh ${@}

override_dh_auto_clean:
	rm -rf thunderbird thunderbird.png converted_icons

override_dh_auto_build:
	tar xvf thunderbird.tbz
	find thunderbird -type f -name *.so -exec chmod 0644 '{}' \;
	cp thunderbird/chrome/icons/default/default256.png thunderbird.png
	./make-icons.sh thunderbird.png

override_dh_shlibdeps:
	dh_shlibdeps -l$(CURDIR)/debian/thunderbird/usr/lib/thunderbird

