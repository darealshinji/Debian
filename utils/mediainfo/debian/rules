#!/usr/bin/make -f

CFLAGS    = -Wall $(filter-out -g -O2,$(shell dpkg-buildflags --get CFLAGS))
CXXFLAGS  = -Wall $(filter-out -g -O2,$(shell dpkg-buildflags --get CXXFLAGS)) -Wno-write-strings
LDFLAGS  += -Wl,-z,defs


%:
	dh $@ --parallel

override_dh_auto_clean:
	dh_auto_clean -DMediaInfo/Project/GNU/CLI
	dh_auto_clean -DMediaInfoLib/Project/GNU/Library
	dh_auto_clean -DZenLib/Project/GNU/Library

override_dh_auto_build:
	./CLI_Compile.sh

override_dh_installdocs:
	dh_installdocs
	prename 's/ReadMe_.*\.txt$$/README/' debian/*/usr/share/doc/*/ReadMe*

override_dh_installchangelogs:
	dh_installchangelogs MediaInfo/History_CLI.txt

