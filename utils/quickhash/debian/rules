#!/usr/bin/make -f

ifeq ($(shell dpkg-architecture -qDEB_HOST_ARCH),amd64)
bits = 64
else
bits = 32
endif
d   = unzipped
bin = $(d)/$(bits)-Bit/QuickHash-*


%:
	dh ${@}

override_dh_auto_clean:
	rm -rf converted_icons $(d)

override_dh_auto_build:
	mkdir $(d)
	cd $(d) && tar xf ../quickhash.tgz
	cp $(bin) quickhash
	chmod a+x quickhash
	./make-icons.sh quickhash.ico

override_dh_installdocs:
	dh_installdocs -A $(d)/UserManual.pdf

override_dh_installchangelogs:
	dos2unix $(d)/README.txt
	dh_installchangelogs $(d)/README.txt

override_dh_compress:
	dh_compress -X.pdf

