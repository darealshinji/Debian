#!/usr/bin/make -f

PKG = franbow-demo


%:
	dh ${@}

override_dh_auto_clean:
	rm -rf converted_icons franbow-demo franbow-demo.png

override_dh_auto_build:
	tar xvf franbow-demo.tgz
	mv "Fran Bow Demo" franbow-demo
	chmod 755 franbow-demo/runner
	cp franbow-demo/assets/icon.png franbow-demo.png
	./make-icons.sh franbow-demo.png

override_dh_shlibdeps:

override_dh_gencontrol:
	dh_gencontrol
	sed -i 's/Architecture: amd64/Architecture: i386/g' debian/$(PKG)/DEBIAN/control

