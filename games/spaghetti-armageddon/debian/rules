#!/usr/bin/make -f


%:
	dh ${@}

override_dh_auto_clean:
	dh_auto_clean -DSFML-1.6
	rm -rf SpaghettiArmageddon

override_dh_auto_build:
	dh_auto_build -DSFML-1.6/src/SFML -- sfml-system sfml-window sfml-audio
	tar xvf SpaghettiArmageddon_Linux.tgz

override_dh_makeshlibs:

override_dh_shlibdeps:
	dh_shlibdeps -l/usr/lib/spaghetti-armageddon

