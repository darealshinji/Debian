#!/usr/bin/make -f

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)


%:
	dh ${@}

override_dh_auto_clean:
	rm -rf converted_icons debian/xnviewmp.links

override_dh_auto_build:
	sed -e 's/@DEB_HOST_MULTIARCH@/$(DEB_HOST_MULTIARCH)/g' \
	debian/xnviewmp.links.in > debian/xnviewmp.links

	../make-icons.sh XnView/xnview.png
	../make-icons.sh XnView/xnview_2.png

	mv XnView/XnView XnView/xnviewmp
	rm -f XnView/UI/style_sheet_win.qss XnView/UI/style_sheet_mac.qss

	cd XnView && chrpath -d xnviewmp Plugins/IlmImf.so

override_dh_installchangelogs:
	dh_installchangelogs XnView/WhatsNew.txt

override_dh_makeshlibs:

override_dh_shlibdeps:

override_dh_builddeb:
	dh_builddeb -- -Zxz -z9

