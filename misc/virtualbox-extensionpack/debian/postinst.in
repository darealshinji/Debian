#!/bin/sh

set -e

extpack=@bin@
sha256sum=@sha256sum@

if [ "$1" = "configure" ]; then

    # remove a possible installation before continuing
    /usr/lib/virtualbox/VBoxExtPackHelperApp uninstall \
        --base-dir /usr/lib/virtualbox/ExtensionPacks \
        --name 'Oracle VM VirtualBox Extension Pack'

    /usr/lib/virtualbox/VBoxExtPackHelperApp install \
        --base-dir /usr/lib/virtualbox/ExtensionPacks \
        --cert-dir /usr/share/virtualbox/ExtPackCertificates \
        --name 'Oracle VM VirtualBox Extension Pack' \
        --tarball "/usr/share/virtualbox-extensionpack/${extpack}" \
        --sha-256 $sha256sum
fi

#DEBHELPER#

exit 0
