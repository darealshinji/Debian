#!/usr/bin/make -f

CFLAGS := $(filter-out -Werror=format-security -g -O2,$(shell dpkg-buildflags --get CFLAGS))
VERSION = $(shell dpkg-parsechangelog -SVersion)
ifeq ($(DEB_HOST_ARCH), amd64)
LIB64 = 64
endif


%:
	dh ${@} --parallel

override_dh_auto_clean:
	dh_auto_clean
	rm -f debian/links debian/install debian/script/grapplinghook debian/script/grapplinghook.6
	rm -rf converted_icons GrapplingHook lwjgl-2.9.1

override_dh_auto_build:
	unzip lwjgl-2.9.1.zip
	tar xvf GrapplingHook.tar.gz
	chmod a-x `find GrapplingHook -type f`
	chmod a+x GrapplingHook/start.sh
	cp GrapplingHook/keys.cfg GrapplingHook/grapplinghook

	./make-icons.sh ghook.png

	sed -e 's/@LIB64@/$(LIB64)/g' debian/links.in > debian/links
	sed -e 's/@LIB64@/$(LIB64)/g' debian/install.in > debian/install
	sed -e 's/@VERSION@/$(VERSION)/g' debian/script/grapplinghook.6.in > debian/script/grapplinghook.6
	sed -e 's/@VERSION@/$(VERSION)/g' debian/script/grapplinghook.in > debian/script/grapplinghook
	chmod a+x debian/script/grapplinghook

override_dh_installchangelogs:
	dh_installchangelogs debian/upstream-changelog

override_dh_makeshlibs:

override_dh_builddeb:
	dh_builddeb -- -Zxz -z9

